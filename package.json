{
   "name": "trillo",
   "version": "1.0.0",
   "description": "",
   "main": "index.js",
   "scripts": {
      "watch:sass": "node-sass sass/main.scss dist/css/style.css --watch",
      "live-server": "live-server dist/",
      "start": "npm-run-all --parallel live-server watch:sass",
      "compile:sass": "node-sass sass/main.scss dist/css/style.comp.css",
      "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" dist/css/style.comp.css -o dist/css/style.prefix.css",
      "compress:css": "node-sass dist/css/style.prefix.css dist/css/style.css --output-style compressed",
      "build:css": "npm-run-all compile:sass  prefix:css compress:css",
      "deploy": "gh-pages -d dist"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/ashish-puttaa/trillo.git"
   },
   "author": "Ashish Puttaa",
   "license": "ISC",
   "bugs": {
      "url": "https://github.com/ashish-puttaa/trillo/issues"
   },
   "homepage": "https://ashish-puttaa.github.io/trillo",
   "devDependencies": {
      "autoprefixer": "^9.7.6",
      "concat": "^1.0.3",
      "gh-pages": "^2.2.0",
      "live-server": "^1.2.1",
      "node-sass": "^4.14.1",
      "npm-run-all": "^4.1.5",
      "postcss-cli": "^7.1.1"
   }
}
